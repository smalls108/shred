<div class = "py-5 px-5">
  <div class="row w-100 justify-content-around">

<!--   Info Card start -->

    <div class="col-xs-12 col-md-7 shadow show-description-div show-review p-4">
      <h2><%= @instructor.user.first_name.capitalize %></h2>
      <div class="bg-grey card-header box-shadow my-3 border-radius background-color-grey">
         <p class="card-header box-shadow my-3 border-radius background-color-grey"><%= @instructor.description %></p>
        <div class="w-100">
          <div class="d-flex justify-content-between align-items-center border-bottom py-2">
          <p>Locations:</p>
          <div style="width: 35%">
            <ul>
            <% @instructor.locations.each do |location| %>
              <li><%= location.name %></li>
          <% end %>
          </ul>
          </div>
        </div>
        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
          <p>Languages:</p>
          <div style="width: 35%">
            <ul>
              <% @instructor.languages.each do |language| %>
            <li><%= language.name %></li>
          <% end %>
        </ul>
        </div>
        </div>
        <div class="row">
          <p>Offers:</p>
          <div><% @instructor.instructor_packages.each do |i_package| %>
            <p><%= i_package.package.title %>:</p>
          <% end %>
            <% @instructor.instructor_packages.each do |i_package| %>
              <p><%= i_package.price %></p>
          <% end %></div>
        </div>
        <%= link_to "update packages", instructor_packages_path %>
     </div>
  </div>
</div>


<!-- Info card end -->


    <div class="col-xs-12 col-md-4 shadow show-image-div" style="background-image: url('<%= cl_image_path @instructor.photos.first.key %>')">
    </div>
  </div>
  <div class="row w-100 mt-4 justify-content-around show-review-div">
    <% if @instructor.reviews.empty? %>
      <h5>No reviews yet</h5>
    <% else %>
      <div class="col-xs-12 col-md-7 show-review shadow p-3">
      <h2>Reviews</h2>
      <% @instructor.reviews.each do |review| %>
        <div class="card-header box-shadow my-3 border-radius background-color-grey">
            <div class="row justify-content-start">
              <div class="mt-1 ml-1">
                <h5 class="card-title mt-1">Rated:<h5>
              </div>
              <div>
                <p class="btn button-secondary mx-2"><%= review.rating %></p>
              </div>
              <div class="mt-2">
                <%  review.rating.times do %>
                <i class="colornice fas fa-star"></i>
                <% end %>
              </div>
            </div>
          <div class="card-body">
            <h5 class="card-title"><%= review.title %></h5>
            <p class="card-text"><%= review.description %></p>
          </div>
          Review from <%= review.user.first_name %>
        </div>
        <% end %>
        <% end %>
        </div>
    <div class="col-xs-12 col-md-4 show-button booking-form-wrapper text-dark shadow p-3 bg-white border-radius">
      <div class="container show-button">
      <% if policy(Booking).create? %>
        <h2 class="text-center">Book <%= @instructor.user.first_name.capitalize %></h2>
        <%= render "bookings/booking_form" %>
      <% end %>
      </div>
    </div>
      </div>
  </div>
  <div>
    <div class="m-3 p-3 button">
      <% if policy(@instructor).update? %>
        <%= link_to "Edit my Profile", edit_instructor_path(@instructor) %>
        <% end %>
        <% if current_user != @instructor.user %>
        <%= link_to "back", instructors_path %>
      <% end %>
    </div>
  </div>

</div>









